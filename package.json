{
  "name": "todos",
  "version": "0.0.0",
  "description": "The todos monorepo",
  "license": "UNLICENSED",
  "private": true,
  "repository": "git@github.com:vramework/workspace-starter.git",
  "author": "Yasser Fadl <yasser.fadl@gmail.com>",
  "main": "index.js",
  "workspaces": {
    "packages": [
      "packages/**",
      "apps/**",
      "backends/**"
    ]
  },
  "scripts": {
    "dbmigrate": "ts-node --transpile-only scripts/db-migrate.ts",
    "schema": "npx @vramework/cli schemas",
    "routes": "npx @vramework/cli routes",
    "kysely": "DATABASE_URL=postgres://postgres:password@localhost/todos kysely-codegen --camel-case --schema public",
    "kysely-pure": "ts-node scripts/kysely-pure.ts",
    "prebuild": "yarn run dbmigrate && yarn run kysely && yarn run kysely-pure && yarn run routes && yarn run schema",
    "tsc": "yarn workspaces foreach -A run tsc",
    "verify": "yarn run tsc",
    "lint": "npx oxlint@latest",
    "prettier": "npx prettier . --write"
  },
  "devDependencies": {
    "@todos/functions": "workspace:0.0.0",
    "@vramework/cli": "^0.1.15",
    "@vramework/core": "^0.1.15",
    "@vramework/services-local": "^0.1.15",
    "kysely-codegen": "^0.16.6",
    "postgres-migrations": "^5.3.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.5"
  },
  "lint-staged": {},
  "dependencies": {
    "eventemitter3": "^5.0.1",
    "pino": "^9.3.2"
  },
  "packageManager": "yarn@4.4.0",
  "resolutions": {
    "@vramework/cli": "portal:/Users/yasser/git/vramework/packages/cli",
    "@vramework/core": "portal:/Users/yasser/git/vramework/packages/core",
    "@vramework/deploy-express": "portal:/Users/yasser/git/vramework/packages/deploy-express",
    "@vramework/deploy-uws": "portal:/Users/yasser/git/vramework/packages/deploy-uws",
    "@vramework/deploy-fastify": "portal:/Users/yasser/git/vramework/packages/deploy-fastify",
    "@vramework/deploy-lambda": "portal:/Users/yasser/git/vramework/packages/deploy-lambda",
    "@vramework/deploy-next": "portal:/Users/yasser/git/vramework/packages/deploy-next",
    "@vramework/services-aws": "portal:/Users/yasser/git/vramework/packages/services-aws",
    "@vramework/services-local": "portal:/Users/yasser/git/vramework/packages/services-local"
  }
}
