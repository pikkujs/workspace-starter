{
  "name": "bookbliss",
  "version": "0.0.0",
  "description": "The bookbliss monorepo",
  "license": "UNLICENSED",
  "private": true,
  "repository": "git@github.com:vramework/workspace-starter.git",
  "author": "Yasser Fadl <yasser.fadl@gmail.com>",
  "main": "index.js",
  "workspaces": {
    "packages": [
      "packages/**",
      "apps/**",
      "backends/**"
    ]
  },
  "scripts": {
    "dbmigrate": "ts-node --transpile-only scripts/db-migrate.ts",
    "schema": "cd backends/express && npx @vramework/cli schemas",
    "kysely": "DATABASE_URL=postgres://postgres:password@localhost/bookbliss kysely-codegen --camel-case",
    "kysely-pure": "ts-node scripts/kysely-pure.ts",
    "prebuild": "yarn run dbmigrate && yarn run kysely && yarn run kysely-pure && yarn run schema",
    "tsc": "yarn workspaces foreach -A run tsc",
    "verify": "yarn run tsc"
  },
  "devDependencies": {
    "@bookbliss/functions": "workspace:0.0.0",
    "@vramework/aws": "^0.1.13",
    "@vramework/cli": "^0.1.13",
    "@vramework/core": "^0.1.13",
    "kysely-codegen": "^0.16.6",
    "postgres-migrations": "^5.3.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.5"
  },
  "lint-staged": {},
  "dependencies": {
    "@libsql/kysely-libsql": "^0.4.1",
    "eventemitter3": "^5.0.1",
    "pino": "^9.3.2"
  },
  "packageManager": "yarn@4.4.0",
  "resolutions": {
    "@vramework/cli": "portal:/Users/yasser/git/vramework/packages/cli",
    "@vramework/core": "portal:/Users/yasser/git/vramework/packages/core",
    "@vramework/deploy-express": "portal:/Users/yasser/git/vramework/packages/deploy-express",
    "@vramework/deploy-lambda": "portal:/Users/yasser/git/vramework/packages/deploy-lambda",
    "@vramework/aws": "portal:/Users/yasser/git/vramework/packages/services-aws"
  }
}
